@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>



<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release date: @Model.ReleaseDate.DayOfWeek, @Model.ReleaseDate.ToShortDateString()</li>
    <li>Added: @Model.DateAdded.DayOfWeek, @Model.DateAdded.ToShortDateString()</li>
    <li>Numver in stock: @Model.NumberInStock</li>
</ul>